.port-card
    color: black
    display: flex
    flex-direction: column
    width: 242px
    height 337px
    border-radius: 4px
    background-color: color11
    .card-img
        flex: 1
        border-radius: 4px
        background: #f5f5f5
        width: 100%
        img 
            border-radius: 4px
            width: 100%
            height 100%
            object-fit: cover
            pointer-events: none

    .card-content
        display flex
        flex-direction: column
        flex: 1    
        .content-title
            flex: 1
            padding: 13px
            font-size: 20px
        .content-desc
            flex: 2.2
            flex-wrap: wrap
            padding: 0px 13px 0px 13px
            font-size: 14px
            font-weight: 200
            color: #313131
        .content-cta
            flex: 0.5
            padding: 13px   
            font-size: 14px
            color: #6200EE  
            cursor pointer   
        