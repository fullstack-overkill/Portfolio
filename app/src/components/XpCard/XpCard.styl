.xp-card
    color: black
    display: flex
    flex-direction: row
    width: 500px
    height 120px
    border-radius: 4px
    background-color: color11
    .card-img
        background: #f5f5f5
        border-radius: 4px
        img 
            border-radius: 4px
            width: 100%
            height 100%
            max-width 120px
            height 120px
            object-fit: cover
            pointer-events: none

    .card-content
        display flex
        flex-direction: column
        flex: 1    
        .content-title
            flex: 1
            padding: 13px 0px 0px 13px
            font-size: 20px
        .content-desc
            flex: 2.2
            flex-wrap: wrap
            padding: 0px 13px 0px 13px
            font-size: 14px
            font-weight: 200
            color: #313131
     
        .content-cta
            flex: 0.5
            padding: 13px   
            font-size: 14px
            color: #6200EE  
            cursor pointer   
        