.page-home
    display: flex
    flex-direction column
    padding: 23px 154px 0px 154px
    width 100%
    height 100%
    background-color bg-color
    
.header-aling
    min-height: 31px

.main-aling
    display: flex
    flex: 1
    justify-content: center
    .Conteudo
        display: flex
        flex-direction: column
        margin-top: 190px
        .logo
            display: none
        .main-name
            color: color21
            font-size: 75px
            font-family: Calibri
            .Destaque
                color: color22
        .main-sub
            color: color23
            margin-top: 26px
            font-size: 49px
            font-family: Calibri
            br
                display: none
        .main-desc
            margin-top: 28px
            max-width 363px   
            font-size: 14px 
            color: color21
            font-family: Calibri
        .see-my-work
            display flex
            align-items: center
            justify-content: center
            margin-top: 34px
            width: 128px
            height 37px
            user-select none
            cursor pointer
            background-color:   bg-color
            border: 1px solid color24    
            color: color22 

/* Mobile */

@media only screen and (max-width: 960px) 
  
  .page-home
    padding 0    
    .header-aling 
        order: 2
        background-color: color25
    .main-aling
        order: 1      
        .Conteudo 
            margin-top: 0
            padding: 25px
            align-items: center
            text-align: center
            .main-name
                font-size: 49px
            .main-sub
                font-size: 35px    
                br
                    display: block
            .main-desc
                display: none    
            .logo
                width: 100%
                margin-bottom: 68px
                text-align: left 
                display: flex
                font-size: 20px
                user-select none
                font-family: Calibri
                color: color21   
                
    
